{% include 'Partials/head.twig' %}
{% include 'Partials/navbar.twig' %}
{% include 'Partials/header.twig' %}

<section>
    <p class="episode">{{ episode.episode }} | Air date: {{ episode.airDate.format('Y-m-d') }}</p>
    <div class="characters">
        {% for character in characters %}
        <div  class="character">
            <table class="character">
                <tbody>
            <tr>
                <td><img src="{{ character.image }}" alt="{{ character.name }}" width="200" height="200" /></td>
            </tr>
            <tr>
                <td>{{ character.name }}</td>
            </tr>
                </tbody>
            </table>
        </div>
        {% endfor %}
    </div>
</section>

{% include 'Partials/footer.twig' %}